{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      "warn",
      100
    ],
    "no-multi-spaces": [
      1,
      {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "curly": [
      "error"
    ],
    "eqeqeq": [
      "error"
    ],
    "dot-notation": [
      "error"
    ],
    "no-unused-vars": [
      "warn",
      {
        "args": "after-used"
      }
    ],
    "import/extensions": 0,
    "import/imports-first": 0,
    "import/first": 0,
    "import/newline-after-import": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "import/no-dynamic-require": 0,
    "import/no-unresolved": [
      2
    ],
    "import/prefer-default-export": 0,
    "semi": [
      2,
      "never"
    ],
    "no-var": "error",
    "no-mixed-operators": 0,
    "no-param-reassign": 0,
    "no-tabs": 0,
    "no-use-before-define": 0,
    "no-case-declarations": 0,
    "comma-dangle": 0,
    "no-plusplus": 0
  }
}
